#este programa suma por un lado los pares y por otro lado los impares
def suma_par_impar():
  suma_par=0 #defino 2 variables acumuladoras
  suma_impar=0
  numero=input("¿Hasta qué número quieres que sume? ")
  for cont in range(1,int(numero)+1):
    if(cont%2==0):
      print(str(cont)+ " es par")
    if(cont%2==1):
      print(str(cont)+ " es impar")

suma_par_impar()
